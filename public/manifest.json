{
    "name": "Scanner Extension",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "Click to scan",
        "default_icon": "icon.png"
    },
    "permissions": [
        "storage",
        "scripting",
        "tabs",
        "activeTab"
    ],
    "optional_permissions": [
    ],
    "host_permissions": [
        "http://*/",
        "https://*/"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "48": "icon.png"
    }
}