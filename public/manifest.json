{
    "name": "Scanner Extension",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_title": "Click to scan",
        "default_icon": "icon.png"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://safebrowsing.googleapis.com/*"
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "icons": {
        "48": "icon.png"
    }
}